<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.raoleqing.yangmatou.common.CircleImageView
            android:id="@+id/evaluation_user_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_icon"
            my:border_color="@color/text03"
            my:border_width="1dp" >
        </com.raoleqing.yangmatou.common.CircleImageView>

        <TextView
            android:id="@+id/evaluation_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/evaluation_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lines="3" />

    <TextView
        android:id="@+id/evaluation_time"
        style="@style/text04_type03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2016å¹´" />

</LinearLayout>