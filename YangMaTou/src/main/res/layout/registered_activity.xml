<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    <View 
        android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/bg04"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp"
            android:src="@drawable/registered_icon01"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"         
            android:hint="请输入手机号码" />
    </LinearLayout>
    
     <View 
        android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/bg04"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp"
            android:src="@drawable/registered_icon02"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:hint="请输入身份证号码" />
    </LinearLayout>
    
    
      <View 
        android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/bg04"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp"
            android:src="@drawable/registered_icon03"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:hint="请输入真实姓名" />
    </LinearLayout>
    
    
      <View 
        android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/bg04"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp"
            android:src="@drawable/registered_icon04"/>
        
        
        <RelativeLayout 
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginLeft="10dp">
             
           <TextView
               android:id="@+id/registered_codes"
            style="@style/text02_type03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:text="获取验证码" 
            />
           
           <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_toLeftOf="@id/registered_codes"     
            android:background="#00000000"      
            android:hint="请输入验证号码" />
            
        </RelativeLayout>
        
        
       
    </LinearLayout>
    
    
         <View 
        android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/bg04"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp" 
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp"
            android:src="@drawable/registered_icon05"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:inputType="textPassword"
            android:textColorHint="@color/text04"
            android:hint="设置密码" />
    </LinearLayout>
    
    
     <View 
        android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/bg04"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp"
            android:src="@drawable/registered_icon06"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:textColorHint="@color/text04"
            android:inputType="textPassword"
            android:hint="确认密码" />
    </LinearLayout>
    
       
     <View 
        android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/bg04"
    android:layout_marginBottom="20dp"/>
     
      <Button
        style="@style/text01_type03"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_selector_background03"
        android:text="注册" />
      
      
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            style="@style/text03_type01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号" />

        <Button
            style="@style/text02_type02"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_selector_background02"
            android:text="登录" />
    </LinearLayout>
    

</LinearLayout>
