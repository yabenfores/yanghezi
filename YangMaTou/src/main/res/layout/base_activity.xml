<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/base_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg05"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/activity_title"
            style="@style/text01_type04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="" />

        <ImageView
            android:id="@+id/activity_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_selector_background01"
            android:scaleType="center"
            android:src="@drawable/return_icon" />

        <EditText
            style="@style/text01_type03"
            android:id="@+id/activity_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:background="@drawable/background_selector4"
            android:drawableRight="@drawable/main_search_icon"      
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:visibility="gone"
           android:imeOptions="actionSend"
            android:inputType="text"
            android:textColorHint="@color/text03" />
        
        
        <ImageView
            android:id="@+id/activity_qrode"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_selector_background01"
            android:scaleType="center"
            android:visibility="gone"
            android:src="@drawable/qrcode_icon" />

    </RelativeLayout>

</RelativeLayout>