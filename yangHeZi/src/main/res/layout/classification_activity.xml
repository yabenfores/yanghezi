<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/encode_view"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/classification_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_selector_background01"
            android:scaleType="center"
            android:src="@drawable/ic_app_back" />


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/background_selector4"
            android:layout_toRightOf="@+id/classification_return"
            android:layout_toLeftOf="@+id/classification_code"
            android:orientation="horizontal">

            <EditText
                android:background="#00ffffff"
                android:id="@+id/goods_list_search"
                style="@style/text16sp_typeblack"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:hint="搜商品、直播，买手"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColorHint="@color/text04" />
            <ImageView
                android:id="@+id/iv_app_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search_gr" />
        </LinearLayout>


        <ImageView
            android:id="@+id/classification_code"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_selector_background01"
            android:scaleType="center"
            android:src="@drawable/ic_code_black" />

    </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/classification_listview"
            android:layout_width="100dp"
            android:layout_height="wrap_content" 
            android:cacheColorHint="#00000000">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg04"
        android:orientation="vertical"
        android:padding="5dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/image_icon01" />

        <ListView
            android:id="@+id/classification_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >
        </ListView>
    </LinearLayout>
   </LinearLayout>

</LinearLayout>