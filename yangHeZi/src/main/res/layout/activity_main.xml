<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main_title_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg03">

            <LinearLayout
                android:id="@+id/gou_wu_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/button_selector_background01"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/qrcode_icon" />

                <TextView
                    style="@style/text01_type02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="扫描" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_web_back"
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/return_icon"/>

            <RelativeLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/gou_wu_message">

                <LinearLayout
                    android:id="@+id/gou_wu_advisory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_selector_background01"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/main_advisory_icon" />

                    <TextView
                        style="@style/text01_type02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="在线" />
                </LinearLayout>

                <EditText
                    android:id="@+id/main_search"
                    style="@style/text01_type03"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/gou_wu_advisory"
                    android:background="@drawable/background_selector2"
                    android:drawableRight="@drawable/main_search_icon"
                    android:hint="搜商品、直播，买手"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/text03" />
            </RelativeLayout>


        </RelativeLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg02"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/gor_wu_title_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#fff" />
            </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:orientation="vertical" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg01"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_host01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_host_image01"
                style="@style/main_bar_image"
                android:src="@drawable/main_host01_host" />

            <TextView
                android:id="@+id/main_host_text01"
                style="@style/text02_type01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="购物广场" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_host02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_host_image02"
                style="@style/main_bar_image"
                android:src="@drawable/main_host02" />

            <TextView
                android:id="@+id/main_host_text02"
                style="@style/text02_type01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="热卖" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_host03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_host_image03"
                style="@style/main_bar_image"
                android:src="@drawable/main_host03" />

            <TextView
                android:id="@+id/main_host_text03"
                style="@style/text02_type01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="专题" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_host04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_host_image04"
                style="@style/main_bar_image"
                android:src="@drawable/main_host04" />

            <TextView
                android:id="@+id/main_host_text04"
                style="@style/text02_type01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="秀一下" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_host05"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_host_image05"
                style="@style/main_bar_image"
                android:src="@drawable/main_host05" />

            <TextView
                android:id="@+id/main_host_text05"
                style="@style/text02_type01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="我的盒子" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/iv_app_to_top"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitCenter"
            android:layout_width="36dp"
            android:src="@drawable/ic_app_to_top"
            android:layout_marginRight="10dp"
            android:layout_height="36dp" />
    </RelativeLayout>


</RelativeLayout>