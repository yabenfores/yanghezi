<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/encode_view"
        android:id="@+id/lyo_massage"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_massage"
            android:src="@drawable/user_icon"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_new_massage"
                android:layout_alignParentRight="true"
                android:layout_width="10dp"
                android:background="@drawable/ic_xinxiaoxi"
                android:layout_height="10dp" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv_massage_title"
                    style="@style/text16sp_typeblack"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/text12sp_typeblack"
                    android:id="@+id/tv_massage_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_massage_com"
                android:gravity="center_vertical"
                android:layout_weight="1"
                style="@style/text04_type02"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:lines="1"
                android:ellipsize="end"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>