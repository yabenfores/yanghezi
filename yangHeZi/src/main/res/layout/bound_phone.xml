<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg04"
    android:orientation="vertical" >
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            style="@style/text03_type01"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="手机号" />

        <EditText
            android:id="@+id/et_app_mobile"
            style="@style/text03_type01"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:numeric="integer"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            style="@style/text03_type01"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="请输入手机验证码" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line01" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <Button
                android:id="@+id/btn_send_massage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="发送验证码" />

            <EditText
                android:id="@+id/et_app_code"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:hint="请输入验证码" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        style="@style/text01_type03"
        android:id="@+id/btn_app_bind"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_selector_background03"
        android:text="绑定" />

   

</LinearLayout>
