<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/goods_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/image_icon01"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/goods_name"
            android:layout_weight="1"
            style="@style/text03_type02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="说明" />

        <TextView
            android:id="@+id/goods_price"
            style="@style/text03_type02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="￥0.00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goods_discount"
                style="@style/text02_type02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_selector3"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="1.8折" />

            <TextView
                android:id="@+id/goods_price01"
                style="@style/text04_type01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价：￥0.00" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>